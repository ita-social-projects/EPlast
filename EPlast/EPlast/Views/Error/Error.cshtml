@{
    Layout = "~/Views/Error/_ErrorLayout.cshtml";
}

@if (@ViewBag.Code == 404)
{
    <div class="d-flex flex-row justify-content-around align-items-center" id="ep-div1">
        <div class="text-left" id="ep-div-left">
            <p class="text-center" id="ep-code">404</p>
        </div>
        <div id="ep-div-center">
            <p id="ep-line"></p>
        </div>
        <div class="d-flex flex-column flex-shrink-0 align-items-center" id="ep-div-right">
            <i class="fas fa-exclamation-triangle" id="ep-icn"></i>
            <p id="error-page-msg">Сторінку не знайдено !</p>
            <a class="btn btn-primary py-3 border rounded error-page-custom " id="error-page-btn"  asp-controller="Home" asp-action="Index">На головну</a>
        </div>
    </div>
}

else
{
    <div class="d-flex flex-row justify-content-around align-items-center" id="ep-div1">
        <div class="text-left" id="ep-div-left">
            <p class="text-center" id="ep-code">@ViewBag.Code</p>
        </div>
        <div id="ep-div-center">
            <p id="ep-line"></p>
        </div>
        <div class="d-flex flex-column flex-shrink-0 align-items-center" id="ep-div-right">
            <i class="fas fa-bug" id="ep-icn"></i>
            <p id="error-page-msg">Внутрішня помилка сервера !</p>
            <a class="btn btn-primary py-3 border rounded error-page-custom" id="error-page-btn" asp-controller="Home" asp-action="Index">На головну</a>
        </div>
    </div>
}



